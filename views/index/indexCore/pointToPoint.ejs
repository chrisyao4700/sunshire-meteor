<div role="tabpanel" class="tab-pane" id="p2p">
    <div class="row">
        <form action="/submit" method="post">
            <div class="col-xxs-12 col-xs-12 mt">
                <div class="input-field">
                    <label for="from">From:</label>
                    <input type="text" class="form-control" id="p2p_org" name="p2p_org"
                           placeholder="1234 Main Street, Pomona, CA" required/>
                </div>
            </div>
            <div class="col-xxs-12 col-xs-12 mt">
                <div class="input-field">
                    <label for="to">To:</label>
                    <input type="text" class="form-control" id="p2p_des" name="p2p_des"
                           placeholder="2234 Walnut street, Fontana, CA" required/>
                </div>
            </div>
            <div class="col-xxs-12 col-xs-6 mt alternate">
                <div class="input-field">
                    <label for="date-start">Pickup Date:</label>
                    <input type="text" class="form-control" id="p2p-pickupDate" name="pickup_date"
                           placeholder="mm/dd/yyyy" onfocus="blur();" required/>
                </div>
            </div>

            <div class="col-xxs-12 col-xs-6 mt alternate">
                <div class="input-field">
                    <label for="date-start">Pickup Time:</label>
                    <input type="text" class="form-control" id="p2p-pickupTime" name="pickup_time"
                           placeholder="HH:mm" onfocus="blur();" required/>
                </div>
            </div>

            <div class="col-xs-12">
                <input type="text" name="service_code" value="p2p" hidden>
                <input type="text" name="is_pickup" value="2" hidden>
                <input type="submit" class="btn btn-primary btn-block"
                       value="Get Price">
            </div>

        </form>

    </div>
</div>